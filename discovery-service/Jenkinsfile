node('maven') {

     withMaven(maven:'mvn_home') {
 
    
        stage('Checkout') {
            git url: 'https://github.com/cdpdevops/newmsapp.git', credentialsId: 'gitaccess', branch: 'microbes'
        }

        stage('Build') {
            sh 'mvn -f discovery-service/pom.xml clean install'
            def pom = readMavenPom file:'discovery-service/pom.xml'
            print pom.version
            env.version = pom.version
        }
        stage('Image') {
            dir ('discovery-service') {
            	def app = docker.build "-H tcp://10.0.1.15:2375 cdp-gateway-service:${env.version}"
                app.push()
            }
        }
     }
}

        
node ('dockerhost') {

        stage ('Run') {
            docker.image("cdp-discovery-service:${env.version}").run('-p 8761:8761 --name discovery')
        }

}